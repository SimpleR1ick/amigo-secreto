doctype html
html(lang="pt-br")
    head 
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")

        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")

        //- Font Awesome
        script(src="https://kit.fontawesome.com/27881023c7.js", crossorigin="anonymous")

        //- Jquery
        script(src="https://code.jquery.com/jquery-3.6.4.js", integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=", crossorigin="anonymous") 

        //- Internal CSS
        link(rel="stylesheet", type="text/css", href="style.css")

        title #{title}

    body 
        form.container(action="/login" method="post")
            div.row.justify-content-center 
                div.col-6
                    // Email input
                    div.form-outline.mb-4
                        label.form-label(for="form2Example1") Email address
                        input#form2Example1.form-control(type="email" name="email")
                        
                    // Password input
                    div.form-outline.mb-4
                        label.form-label(for="form2Example2") Password
                        input#form2Example2.form-control(type="password" name="senha")

                    // 2 column grid layout for inline styling
                    div.row.mb-4
                        div.col.d-flex.justify-content-center
                        // Checkbox
                        div.form-check
                            input.form-check-input(type="checkbox", value="", id="form2Example31", checked)
                            label.form-check-label(for="form2Example31") Remember me
                        div.col
                        // Simple link
                        a(href="#!") Forgot password?

                    // Submit button
                    button.btn.btn-primary.btn-block.mb-4(type="submit") Sign in

                    // Register buttons
                    div.text-center
                        p Not a member? 
                            a(href="#!") Register
                        p or sign up with:

                        button.btn.btn-link.btn-floating.mx-1(type="button")
                            i.fab.fa-facebook-f
                        button.btn.btn-link.btn-floating.mx-1(type="button")
                            i.fab.fa-google
                        button.btn.btn-link.btn-floating.mx-1(type="button")
                            i.fab.fa-twitter
                        button.btn.btn-link.btn-floating.mx-1(type="button")
                            i.fab.fa-github

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js",
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe", crossorigin="anonymous") 

        script(src="script.js" type="text/javascript") 